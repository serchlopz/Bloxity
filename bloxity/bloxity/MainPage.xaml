<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:bloxity"
             x:Class="bloxity.MainPage" Title="Login">
    <ScrollView>
        <StackLayout Padding="10,20,10,5">

            <Label Text="BLOXITY" 
                   HorizontalOptions="Center" 
                   >
            </Label>

            <Image 
                   Source="onu" 
                   WidthRequest="180">
            </Image>

            <Label 
                    Text="Nueva app Bloxity" 
                    HorizontalOptions="Center">
                
            </Label>
            
            <Entry 
                Keyboard="Email" 
                Placeholder="Ingrese tus datos">
                
            </Entry>

            <!--<Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
            </Grid>-->

            <Label Text="Password" HorizontalOptions="Center"></Label>
            <Entry IsPassword="True" Placeholder="Ingrese tu password"></Entry>


            <ActivityIndicator></ActivityIndicator>


            <StackLayout Margin="40,0">
                <Button BorderRadius="23"  TextColor="White" BackgroundColor="Navy" HorizontalOptions="Center" Text="Sing up" />
                <Button BorderRadius="23" TextColor="Black" BackgroundColor="SlateGray"  HorizontalOptions="Center" Text="Registrame" />

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Image Source="facebook_logo" WidthRequest="30"></Image>
                <Image Source="twitter_logo" WidthRequest="30"></Image>
                <Image Source="instagram_logo" WidthRequest="30"></Image>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
